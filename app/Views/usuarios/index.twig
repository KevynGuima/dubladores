{% include 'home/header.twig' %}

{% include 'home/sidebar.twig' %}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

		<button type="button" class="btn btn-primary novo">
			<i class="fa fa-plus"></i>
			Novo
		</button>

		<h2>Lista de Usuários</h2>
		<table id="tbUsuarios" class="table table-striped table-bordered table-hover table-hover-color-red" 
		cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Data Nascimento</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for usuario in usuarios %}
					<tr data-info='{{ {"id": usuario.id, "nascimento": usuario.data_nascimento} | json_encode }}'>	
						<td>{{ usuario.nome }}</td>
						<td>{{ usuario.email }}</td>
						<td>{{ usuario.data_nascimento is not null ? usuario.data_nascimento|date('d/m/Y') : ''  }}</td>
						<td class="minimal-cell" style="background-color:#fff !important;">
							<button type="button" class="btn btn-success editar">
								<i class="fa fa-pencil"></i>
							</button>
							<button type="button" class="btn btn-danger deletar">
								<i class="fa fa-trash"></i>
							</button>							
						</td>						
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div id="modal" class="modal fade" role="dialog">
		  <div class="modal-dialog">

			<!-- Conteúdo do modal -->
			<div class="modal-content">
			  <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Usuários</h4>
			  </div>
			  <div class="modal-body">
				<form id="form" action="usuarios/salvar" method="post" autocomplete="off">
					<div class="form-group">
						<label for="nome">Nome:</label>
						<input type="text" class="form-control" id="nome" name="nome" required autofocus>
					</div>
					<div class="form-group">
						<label for="email">Email:</label>
						<input type="email" class="form-control" id="email" name="email" required>
					</div>
					<div class="form-group">
						<label for="senha">Senha:</label>
						<input type="password" class="form-control" id="senha" name="senha" required>
					</div>
					<div class="form-group">
						<label for="dataNascimento">Data de Nascimento:</label>
						<input type="date" class="form-control" id="dataNascimento" name="dataNascimento" required>
					</div>
					<button type="submit" class="btn btn-primary">
						<i class="fa fa-save"></i>
						Salvar
					</button>
				</form>
			  </div>
			</div>

		  </div>
		</div>


	</section>
    <!-- /.content -->
  </div>
  
 {% include 'home/footer.twig' %}
