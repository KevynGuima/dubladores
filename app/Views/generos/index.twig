{% include 'home/header.twig' %}

{% include 'home/sidebar.twig' %}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

		<button id="btnNovo" type="button" class="btn btn-primary">
			<i class="fa fa-plus"></i>
			Novo
		</button>

		<h2>Lista de Gêneros</h2>
		<table class="table table-striped table-bordered table-hover table-hover-color-red" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Gênero</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for genero in generos %}
					<tr data-id='{{ genero.id }}' data-info='{{ {"genero": genero} | json_encode }}'>
						<td>{{ genero.genero }}</td>
						<td class="minimal-cell" style="background-color:#fff !important;">
							<button type="button" class="btn btn-success editar">
								<i class="fa fa-pencil"></i>
							</button>
							<button type="button" class="btn btn-danger deletar">
								<i class="fa fa-trash"></i>
							</button>							
						</td>						
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div id="modal" class="modal fade" role="dialog">
		  <div class="modal-dialog">

			<!-- Conteúdo do modal -->
			<div class="modal-content">
			  <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Generos</h4>
			  </div>
			  <div class="modal-body">
				<form id="form" action="" method="post" autocomplete="off">
					<div class="form-group">
						<label for="genero">Gênero:</label>
						<input type="text" class="form-control" id="genero" name="genero" required autofocus>
					</div>
					<button type="submit" class="btn btn-primary">
						<i class="fa fa-save"></i>
						Salvar
					</button>
				</form>
			  </div>
			</div>

		  </div>
		</div>


	</section>
    <!-- /.content -->
  </div>
  
 {% include 'home/footer.twig' %}
